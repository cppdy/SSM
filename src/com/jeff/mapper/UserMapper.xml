<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeff.mapper.UserMapper">
	<select id="selByPage" resultType="user">
		select * from user
		<where>
			status!=2
			<if test="param1.loginName!=null and param1.loginName!=''">
				<bind name="param1.loginName" value="'%'+param1.loginName+'%'"></bind>
				<![CDATA[and login_name like #{param1.loginName}]]>
			</if>
			<if test="param1.name!=null and param1.name!=''">
				<bind name="param1.name" value="'%'+param1.name+'%'"></bind>
				<![CDATA[and name like #{param1.name}]]>
			</if>
		</where>
		limit #{param2.pageStart},#{param2.pageSize}
	</select>

	<select id="selCountByPageInfo" resultType="long">
		select count(*) from user
		<where>
			<if test="param1.loginName!=null and param1.loginName!=''">
				<bind name="param1.loginName" value="'%'+param1.loginName+'%'"></bind>
				<![CDATA[and login_name like #{param1.loginName}]]>
			</if>
			<if test="param1.name!=null and param1.name!=''">
				<bind name="param1.name" value="'%'+param1.name+'%'"></bind>
				<![CDATA[and name like #{param1.name}]]>
			</if>
		</where>
	</select>

	<insert id="insUser" parameterType="user">
		insert into user values(
			default,#{loginName},#{phone},#{email},#{password},#{salt},#{nickName},#{name},#{sex},#{birthday},
			#{photoUrl},#{userType},#{status},#{createTime},#{createdBy},#{updateTime},#{updatedBy}
		)
	</insert>

	<!-- <delete id="delUser" parameterType="int">
		delete from user where id=#{id}
	</delete> -->

	<update id="delUser" parameterType="int">
		update user set status=2 where id=#{id}
	</update>
	
	<select id="selUserById" parameterType="int" resultType="user">
		select * from user where id=#{id}
	</select>

	<update id="updUser" parameterType="user">
		update user set
			login_name=#{loginName},
			phone=#{phone},
			email=#{email},
			nick_name=#{nickName},
			name=#{name},
			sex=#{sex},
			birthday=#{birthday},
			photo_url=#{photoUrl},
			user_type=#{userType},
			status=#{status},
			update_time=#{updateTime},
			updated_by=#{updatedBy}
		where id=#{id}
	</update>
	
</mapper>